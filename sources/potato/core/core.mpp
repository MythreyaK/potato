module;

#include "version.hpp"

export module potato.core;

export import : time;
export import : utils;

import std.core;

export namespace potato::build {

    enum class type { Debug, Release, ReleaseWithDebugInfo };

    constexpr type build_type { type::DBUILD_TYPE };

    constexpr bool is_debug() {
        return (build_type == type::Debug)
            || (build_type == type::ReleaseWithDebugInfo);
    }

}  // namespace potato::build
